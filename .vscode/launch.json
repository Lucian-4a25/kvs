    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug kvs-server",
            "cargo": {
                "args": [
                    "build",
                    "--bin=kvs-server",
                    "--package=kvs"
                ],
                "filter": {
                    "name": "kvs-server",
                    "kind": "bin"
                }
            },
            "args": ["--engine", "kvs", "--addr", "127.0.0.1:4001"],
            "cwd": "${workspaceFolder}"
        }

    ]
}